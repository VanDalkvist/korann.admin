doctype html
html(ng-app="korann.admin")
    head
        meta(charset="utf-8")
        title Angular Express Train
        link(rel='stylesheet', href='/css/style.css')
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        base(href="/")
    body
        div.container
            div.navbar.navbar-inverse
                div.navbar-inner
                    a.brand(ng-href='/') Angular Express Train
                    ul.nav
                        li
                            a(ng-href="/todos", ng-show="user.username") My Todos
                    ul.nav.pull-right
                        li(ng-hide="user.username")
                            a(ng-href="/login") Login
                        li.dropdown(ng-show="user.username")
                            a.dropdown-toggle(href="#", data-toggle="dropdown") Hello, {{user.username}}
                                b.caret
                            ul.dropdown-menu
                                li
                                    a(ng-click="logout()") Log Out

        div.container(ng-view)

        script(src="/js/references/jquery/jquery.js")
        script(src="/js/references/bootstrap/bootstrap.js")
        script(src="/js/references/angular/angular.js")
        script(src="/js/references/angular/angular-resource.js")
        script(src="/js/references/angular/angular-route.js")
        script(src="/js/app/app.js")
        script(src="/js/app/main/index.js")