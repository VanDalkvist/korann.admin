div.offset4
    div(ng-controller="LoginCtrl")
        h2 Login

        form(name="loginForm", ng-submit="submit()")
            fieldset
                div.form-group
                    input(type="text", ng-model="model.login", required, placeholder="login...")
                    br
                div.form-group
                    input(type="password", ng-model="model.password", required, placeholder="password...")
                    br
                div.form-group
                    label.control-label.red(ng-show="model.error") {{model.error}}
                button.btn.btn-default(type="submit", ng-disabled="loginForm.$invalid") Log in
                br