{
    "locations": {
        "views": "views",
        "public": "public"
    },
    "config": {
        "path": "config",
        "autoinject": true,
        "type": "single"
    },
    "lib": {
        "path": "lib",
        "autoinject": true,
        "type": "all"
    },
    "controllers": {
        "path": "controllers",
        "autoinject": true,
        "aggregateOn": "controllers",
        "type": "all"
    },
    "middleware": {
        "path": "middleware",
        "autoinject": true,
        "type": "all"
    }
}