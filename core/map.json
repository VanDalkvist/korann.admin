{
    "pkg": {
        "path": "../package.json"
    },
    "locations": {
        "views": "views",
        "public": "public"
    },
    "config": {
        "path": "config",
        "autoinject": true
    },
    "lib": {
        "path": "lib",
        "autoinject": true
    },
    "controllers": {
        "path": "controllers",
        "autoinject": true,
        "aggregateOn": "controllers"
    },
    "middleware": {
        "path": "middleware",
        "autoinject": true
    }
}