        script(src="/vendors/bootbox/bootbox.js")
        script(src="/vendors/lodash/dist/lodash.compat.js")
        script(src="/vendors/angular-validation/dist/angular-validation.js")
        script(src="/js/startup/app.js")
        script(src="/js/startup/init.js")
        script(src="/js/app/categories/categories.js")
        script(src="/js/app/categories/category-details.controller.js")
