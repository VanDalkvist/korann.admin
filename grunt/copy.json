{
    "task": "grunt-contrib-copy",
    "name": "copy",
    "config": {
        "angular": {
            "expand": true,
            "src": "bower_components/angular/*.js",
            "dest": "app/public/dist/angular/",
            "flatten": true
        },
        "refs": {
            "expand": true,
            "src": [
                "bower_components/jquery/dist/jquery.js",
                "bower_components/angular-*/*.js"
            ],
            "dest": "app/public/dist/refs/",
            "flatten": true
        },
        "css": {
            "expand": true,
            "src": [
                "app/public//css/*.css",
                "bower_components/bootstrap/dist/css/bootstrap.min.css"
            ],
            "dest": "app/public/dist/css/",
            "flatten": true
        }
    }
}