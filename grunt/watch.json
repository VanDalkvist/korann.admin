{
    "task": "grunt-contrib-watch",
    "name": "watch",
    "config": {
        "gruntfile": {
            "files": ["Gruntfile.js", "grunt/**/*", "app/**/*"],
            "tasks": ["restart"],
            "options": {
                "interrupt": true
            }
        },
        "content": {
            "files": ["app/public/**/*", "app/layouts/*", "!app/public/dist/**/*"],
            "tasks": ["build"],
            "options": {
                "spawn": false,
                "interrupt": true
            }
        }
    }
}