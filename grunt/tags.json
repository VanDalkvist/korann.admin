{
    "task": "grunt-script-link-tags",
    "name": "tags",
    "config": {
        "js": {
            "options": {
                "scriptTemplate": "script(src=\"{{ path }}\")",
                "openTag": "// js dependencies ",
                "closeTag": "// end dependencies"
            },
            "src": [
                "<%= meta.dependencies.js %>",
                "<%= meta.js %>startup/**/*.js",
                "<%= meta.js %>app/**/*.js"
            ],
            "dest": "<%= meta.views %>internal/references.jade"
        },
        "css": {
            "options": {
                "linkTemplate": "link(rel=\"stylesheet\", href=\"{{ path }}\")",
                "openTag": "// css dependencies ",
                "closeTag": "// end dependencies"
            },
            "src": [
                "<%= meta.dependencies.css %>",
                "<%= meta.client %>css/*.css"
            ],
            "dest": "<%= meta.views %>internal/css.jade"
        }
    }
}